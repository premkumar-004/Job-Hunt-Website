<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="login-container">
            <h2>Signup to Job Hunt</h2>
            <form class="login-form needs-validation" method="post" action="/signup" novalidate>
                <div class="form-group">
                    <label for="name">Name <span id="astreik" style="color: red;">*</span></label>
                    <input type="text" id="name" name="user[name]" required>
                </div>
                <div class="form-group">
                    <label for="username">Username <span id="astreik" style="color: red;">*</span></label>
                    <input type="text" id="name" name="user[username]" required>
                </div>
                <div class="form-group">
                    <label for="password">Password <span id="astreik" style="color: red;">*</span></label>
                    <input type="text" id="name" name="user[password]" required>
                </div>
                <div class="form-group">
                    <label for="email">Email <span id="astreik" style="color: red;">*</span></label>
                    <input type="email" id="email" name="user[email]" required>
                </div>
                <div class="form-group">
                    <label for="mobile">Mobile Number <span id="astreik" style="color: red;">*</span></label>
                    <input type="number" id="mobile" name="user[phone]" required>
                </div>
                <div class="form-group">
                    <label for="country">Country <span id="astreik" style="color: red;">*</span></label>
                    <input type="text" id="country" name="user[country]" required>
                </div>
                <div class="form-group">
                    <label for="state">State <span id="astreik" style="color: red;">*</span></label>
                    <input type="text" id="state" name="user[state]" required>
                </div>
                <div class="form-group">
                    <label for="city">City <span id="astreik" style="color: red;">*</span></label>
                    <input type="text" id="city" name="user[city]" required>
                </div>
                <div class="form-group">
                    <label for="pin">Pin Code <span id="astreik" style="color: red;">*</span></label>
                    <input type="number" id="pin" name="user[pincode]" required>
                </div>
                <button type="submit">signup</button>
            </form>
        </div>

    </body>