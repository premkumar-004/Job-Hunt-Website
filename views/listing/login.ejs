<% layout("/layouts/boilerplate.ejs") %>

    <body class="bg-gray-900 min-h-screen">
        <!-- Main container with full width to prevent navbar shrinking -->
        <div class="w-full flex justify-center items-center min-h-screen py-20">
            <!-- Login Card -->
            <div class="bg-gray-800 p-8 rounded-xl shadow-lg w-96 mx-4">
                <!-- Heading -->
                <h2 class="text-3xl font-bold text-center text-white mb-6">Job Hunt</h2>

                <!-- Login Form -->
                <form class="space-y-4" method="post" action="/login">
                    <!-- Username Field -->
                    <div>
                        <label for="username" class="block text-sm font-medium text-gray-300 mb-2">Username</label>
                        <input type="text" id="username" name="username" required class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md 
                               text-white placeholder-gray-400
                               focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent
                               transition duration-200">
                    </div>

                    <!-- Password Field -->
                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-300 mb-2">Password</label>
                        <input type="password" id="password" name="password" required class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md 
                               text-white placeholder-gray-400
                               focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent
                               transition duration-200">
                    </div>

                    <!-- Sign Up Link -->
                    <p class="text-sm text-gray-400">
                        Don't have an account?
                        <a href="/signup"
                            class="text-blue-400 hover:text-blue-300 hover:underline transition duration-200">
                            Sign Up
                        </a>
                    </p>

                    <!-- Error Message -->
                    <p id="incorrect-usr-pass" class="text-red-400 text-sm opacity-0">
                        *Incorrect password or username
                    </p>

                    <!-- Submit Button -->
                    <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-md 
                           hover:bg-blue-700 
                           focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-800
                           transition duration-200">
                        Login
                    </button>
                </form>
            </div>
        </div>
    </body>