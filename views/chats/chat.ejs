<% layout("/layouts/boilerplate.ejs") %>

    <div class="min-h-screen bg-gradient-to-br from-gray-900 to-gray-800 p-6">
        <div class="max-w-6xl mx-auto">
            <div class="bg-gray-800 rounded-3xl shadow-2xl overflow-hidden border border-gray-700">
                <!-- Chat Header -->
                <div class="bg-gradient-to-r from-blue-900 to-purple-900 p-4">
                    <div class="flex items-center space-x-4">
                        <a href="/users/profile" class="text-white hover:text-gray-200 transition-colors">
                            <i class="fas fa-arrow-left text-xl"></i>
                        </a>
                        <div class="flex items-center space-x-3">
                            <div class="relative">
                                <img src="<%= user.profileImage || 'https://t4.ftcdn.net/jpg/06/48/39/19/360_F_648391979_uMz6EwAlKNIJnK9r46UpTiM17nT8GuLl.jpg' %>"
                                    alt="Profile" class="w-12 h-12 rounded-full border-2 border-gray-700 object-cover">
                                <div
                                    class="absolute bottom-0 right-0 w-3 h-3 bg-emerald-500 rounded-full border-2 border-gray-700">
                                </div>
                            </div>
                            <div>
                                <h2 class="text-white font-semibold">
                                    <%= user.name %>
                                </h2>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Chat Messages Area -->
                <div class="h-[calc(100vh-16rem)] overflow-y-auto p-6 space-y-4" id="chatMessages">
                    <% if (chat && chat.length> 0) { %>
                        <% chat[0].messages.forEach(message=> { %>
                            <div
                                class="flex justify-<%= message.sender.toString() === currUser._id.toString() ? 'end' : 'start' %>">
                                <div
                                    class="<%= message.sender.toString() === currUser._id.toString() ? 'bg-blue-600' : 'bg-gray-700' %> 
                                     rounded-2xl <%= message.sender.toString() === currUser._id.toString() ? 'rounded-tr-none' : 'rounded-tl-none' %> p-4 max-w-md">
                                    <p class="text-white">
                                        <%= message.content %>
                                    </p>
                                    <p
                                        class="<%= message.sender.toString() === currUser._id.toString() ? 'text-blue-200' : 'text-gray-400' %> text-xs mt-1">
                                        <%= new Date(message.timestamp).toLocaleTimeString([], { hour: '2-digit' ,
                                            minute: '2-digit' }) %>
                                    </p>
                                </div>
                            </div>
                            <% }) %>
                                <% } %>
                </div>

                <!-- Chat Input Area -->
                <div class="p-4 bg-gray-750 border-t border-gray-700">
                    <form id="chatForm" class="flex items-center space-x-4 " method="post"
                        action="/users/<%=user._id%>/chat/">
                        <div class="flex-1 relative">
                            <input type="text" id="messageInput"
                                class="w-full bg-gray-700 text-white rounded-xl py-3 px-4 pr-12 focus:outline-none focus:ring-2 focus:ring-blue-500 border border-gray-600"
                                placeholder="Type your message..." name="msg">
                            <button type="button"
                                class="absolute right-2 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-300 transition-colors">
                                <i class="fas fa-smile text-xl"></i>
                            </button>
                        </div>
                        <button type="submit"
                            class="bg-blue-600 hover:bg-blue-700 text-white rounded-xl p-3 transition-colors flex items-center justify-center">
                            <i class="fas fa-paper-plane"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <style>
        /* Custom scrollbar for chat messages */
        #chatMessages::-webkit-scrollbar {
            width: 6px;
        }

        #chatMessages::-webkit-scrollbar-track {
            background: rgba(0, 0, 0, 0.1);
            border-radius: 3px;
        }

        #chatMessages::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.2);
            border-radius: 3px;
        }

        #chatMessages::-webkit-scrollbar-thumb:hover {
            background: rgba(255, 255, 255, 0.3);
        }

        /* Prevent text input from overflowing */
        #messageInput {
            max-height: 100px;
            overflow-y: auto;
        }
    </style>