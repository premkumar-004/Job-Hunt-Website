<% layout("/layouts/boilerplate.ejs") %>

    <body class="bg-gray-900 text-gray-100">
        <div class="container mx-auto px-4 py-12 max-w-7xl">
            <!-- About Us Section -->
            <section class="text-center mb-16">
                <h1 class="text-5xl font-bold mb-6 text-gray-100">Welcome to Job Hunt</h1>
                <p class="text-xl mb-4 text-gray-300">Your go-to platform for short-term, skill-based job opportunities,
                    connecting job seekers with providers for one-time tasks in areas such as repairs, maintenance, and
                    more.</p>
                <p class="text-lg text-gray-400">At Job Hunt, our mission is to empower individuals to earn on-demand by
                    matching their skills with the community's needs, all while offering fast and reliable assistance to
                    job providers.</p>
            </section>

            <!-- Our Services Section -->
            <section class="my-16">
                <h2 class="text-3xl font-bold text-center mb-8 text-gray-100">Our Services</h2>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    <div
                        class="bg-gray-800 rounded-lg shadow-md p-6 transition duration-300 hover:shadow-lg hover:bg-gray-700">
                        <i class="icon-[lucide--wrench] text-4xl mb-4 text-blue-400"></i>
                        <h5 class="text-xl font-semibold mb-3 text-gray-100">Repair Services</h5>
                        <p class="text-gray-300">From electrical fixes to plumbing issues, find experienced
                            professionals for any repair need.</p>
                    </div>
                    <div
                        class="bg-gray-800 rounded-lg shadow-md p-6 transition duration-300 hover:shadow-lg hover:bg-gray-700">
                        <i class="icon-[lucide--tree] text-4xl mb-4 text-blue-400"></i>
                        <h5 class="text-xl font-semibold mb-3 text-gray-100">Maintenance & Cleanup</h5>
                        <p class="text-gray-300">Get help with yard work, gutter cleaning, and basic property
                            maintenance.</p>
                    </div>
                    <div
                        class="bg-gray-800 rounded-lg shadow-md p-6 transition duration-300 hover:shadow-lg hover:bg-gray-700">
                        <i class="icon-[lucide--paintbrush] text-4xl mb-4 text-blue-400"></i>
                        <h5 class="text-xl font-semibold mb-3 text-gray-100">Specialized Tasks</h5>
                        <p class="text-gray-300">Hire skilled individuals for tasks like painting, furniture assembly,
                            and more.</p>
                    </div>
                </div>
            </section>

            <!-- Benefits Section -->
            <section class="my-16">
                <h2 class="text-3xl font-bold text-center mb-8 text-gray-100">Why Choose Job Hunt?</h2>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    <div
                        class="bg-gray-800 rounded-lg shadow-md p-6 transition duration-300 hover:shadow-lg hover:bg-gray-700">
                        <i class="icon-[lucide--calendar-check] text-4xl mb-4 text-green-400"></i>
                        <h5 class="text-xl font-semibold mb-3 text-gray-100">On-Demand Opportunities</h5>
                        <p class="text-gray-300">Work on your own terms with flexible job options that fit your
                            schedule.</p>
                    </div>
                    <div
                        class="bg-gray-800 rounded-lg shadow-md p-6 transition duration-300 hover:shadow-lg hover:bg-gray-700">
                        <i class="icon-[lucide--banknote] text-4xl mb-4 text-green-400"></i>
                        <h5 class="text-xl font-semibold mb-3 text-gray-100">Instant Earnings</h5>
                        <p class="text-gray-300">Receive fair compensation for each completed task, paid promptly upon
                            job completion.</p>
                    </div>
                    <div
                        class="bg-gray-800 rounded-lg shadow-md p-6 transition duration-300 hover:shadow-lg hover:bg-gray-700">
                        <i class="icon-[lucide--shield] text-4xl mb-4 text-green-400"></i>
                        <h5 class="text-xl font-semibold mb-3 text-gray-100">Trusted Platform</h5>
                        <p class="text-gray-300">We prioritize safety, transparency, and satisfaction in every job
                            posting and interaction.</p>
                    </div>
                </div>
            </section>

            <!-- Upload Job Listings Section -->
            <section class="my-16">
                <h2 class="text-3xl font-bold text-center mb-8 text-gray-100">For Job Providers</h2>
                <p class="text-xl text-center mb-8 text-gray-300">Have a task that needs doing? Post a listing on Job
                    Hunt to reach skilled individuals nearby.</p>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    <div
                        class="bg-gray-800 rounded-lg shadow-md p-6 transition duration-300 hover:shadow-lg hover:bg-gray-700">
                        <i class="icon-[lucide--plus-circle] text-4xl mb-4 text-blue-400"></i>
                        <h5 class="text-xl font-semibold mb-3 text-gray-100">Create a Job Listing</h5>
                        <p class="text-gray-300">Provide job details, location, and preferred skills, and our platform
                            will do the rest.</p>
                    </div>
                    <div
                        class="bg-gray-800 rounded-lg shadow-md p-6 transition duration-300 hover:shadow-lg hover:bg-gray-700">
                        <i class="icon-[lucide--users] text-4xl mb-4 text-blue-400"></i>
                        <h5 class="text-xl font-semibold mb-3 text-gray-100">Attract Skilled Seekers</h5>
                        <p class="text-gray-300">Reach a network of local job seekers ready to take on your specific
                            tasks.</p>
                    </div>
                    <div
                        class="bg-gray-800 rounded-lg shadow-md p-6 transition duration-300 hover:shadow-lg hover:bg-gray-700">
                        <i class="icon-[lucide--message-circle] text-4xl mb-4 text-blue-400"></i>
                        <h5 class="text-xl font-semibold mb-3 text-gray-100">Connect and Hire</h5>
                        <p class="text-gray-300">Communicate directly with selected candidates and confirm job details
                            seamlessly.</p>
                    </div>
                </div>
                <div class="text-center mt-8">
                    <a href="/post-job"
                        class="inline-block px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition duration-300">Post
                        a Job Listing</a>
                </div>
            </section>

            <!-- Testimonials Section -->
            <section class="my-16">
                <h2 class="text-3xl font-bold text-center mb-8 text-gray-100">What Our Users Are Saying</h2>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    <div
                        class="bg-gray-800 rounded-lg shadow-md p-6 transition duration-300 hover:shadow-lg hover:bg-gray-700">
                        <p class="text-gray-300 mb-4">"Job Hunt made it simple to find someone qualified for my yard
                            work. Great experience!"</p>
                        <h6 class="font-semibold text-gray-100">- Emma K.</h6>
                    </div>
                    <div
                        class="bg-gray-800 rounded-lg shadow-md p-6 transition duration-300 hover:shadow-lg hover:bg-gray-700">
                        <p class="text-gray-300 mb-4">"I was able to find a job right when I needed it. Easiest way to
                            earn quick cash!"</p>
                        <h6 class="font-semibold text-gray-100">- David R.</h6>
                    </div>
                    <div
                        class="bg-gray-800 rounded-lg shadow-md p-6 transition duration-300 hover:shadow-lg hover:bg-gray-700">
                        <p class="text-gray-300 mb-4">"Posting a job was easy, and I quickly found help. Highly
                            recommended!"</p>
                        <h6 class="font-semibold text-gray-100">- Sarah M.</h6>
                    </div>
                </div>
            </section>
        </div>
    </body>