<% layout("/layouts/boilerplate.ejs") %>

    <body class="bg-gray-900">
        <section class="container mx-auto px-4 py-12">
            <div class="max-w-6xl mx-auto">
                <div class="text-center mb-12">
                    <h2 class="text-3xl md:text-4xl font-bold text-white">Contact Form</h2>
                </div>

                <div class="bg-gray-800 rounded-2xl shadow-2xl overflow-hidden">
                    <div class="grid md:grid-cols-2">
                        <!-- Contact Form Section -->
                        <div class="p-8 md:p-12 bg-gray-800">
                            <h3 class="text-2xl font-bold text-white mb-6">Write to us</h3>
                            <form id="contactForm" name="contactForm" class="space-y-6">
                                <div>
                                    <input type="text"
                                        class="w-full px-4 py-3 rounded-lg border border-gray-600 bg-gray-700 text-white placeholder-gray-400 focus:border-blue-500 focus:ring-2 focus:ring-blue-500 transition duration-200 outline-none"
                                        name="name" id="name" placeholder="Name" required>
                                </div>
                                <div>
                                    <input type="email"
                                        class="w-full px-4 py-3 rounded-lg border border-gray-600 bg-gray-700 text-white placeholder-gray-400 focus:border-blue-500 focus:ring-2 focus:ring-blue-500 transition duration-200 outline-none"
                                        name="email" id="email" placeholder="Email" required>
                                </div>
                                <div>
                                    <input type="text"
                                        class="w-full px-4 py-3 rounded-lg border border-gray-600 bg-gray-700 text-white placeholder-gray-400 focus:border-blue-500 focus:ring-2 focus:ring-blue-500 transition duration-200 outline-none"
                                        name="subject" id="subject" placeholder="Subject" required>
                                </div>
                                <div>
                                    <textarea name="message" id="message" rows="5"
                                        class="w-full px-4 py-3 rounded-lg border border-gray-600 bg-gray-700 text-white placeholder-gray-400 focus:border-blue-500 focus:ring-2 focus:ring-blue-500 transition duration-200 outline-none resize-none"
                                        placeholder="Message" required></textarea>
                                </div>
                                <div>
                                    <button type="submit"
                                        class="w-full bg-blue-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-blue-500 transition duration-300 transform hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-800">
                                        Send Message
                                    </button>
                                </div>
                            </form>
                        </div>

                        <!-- Contact Information Section -->
                        <div class="bg-gradient-to-br from-blue-800 to-blue-900 p-8 md:p-12 text-white">
                            <h3 class="text-2xl font-bold mb-6">Contact Information</h3>
                            <p class="mb-8 text-blue-200">We're open to any suggestions or just to have a chat.</p>

                            <ul class="space-y-6">
                                <li class="flex items-start space-x-4">
                                    <i class="fa-solid fa-location-dot mt-1 text-blue-300"></i>
                                    <span class="text-blue-100">198 West 21th Street, Suite 721, New York, NY
                                        10016</span>
                                </li>
                                <li class="flex items-center space-x-4">
                                    <i class="fa-solid fa-phone text-blue-300"></i>
                                    <a href="tel://1234567920"
                                        class="text-blue-100 hover:text-white transition duration-300">
                                        + 1235 2355 98
                                    </a>
                                </li>
                                <li class="flex items-center space-x-4">
                                    <i class="fa-solid fa-paper-plane text-blue-300"></i>
                                    <a href="mailto:JobHunt@gmail.com"
                                        class="text-blue-100 hover:text-white transition duration-300">
                                        JobHunt@gmail.com
                                    </a>
                                </li>
                                <li class="flex items-center space-x-4">
                                    <i class="fa-solid fa-globe text-blue-300"></i>
                                    <a href="#" class="text-blue-100 hover:text-white transition duration-300">
                                        JobHunt.com
                                    </a>
                                </li>
                            </ul>

                            <!-- Social Media Links -->
                            <div class="mt-12">
                                <div class="flex space-x-4">
                                    <a href="#"
                                        class="w-10 h-10 flex items-center justify-center rounded-full bg-blue-700 hover:bg-blue-600 transition duration-300">
                                        <i class="fa-brands fa-facebook-f"></i>
                                    </a>
                                    <a href="#"
                                        class="w-10 h-10 flex items-center justify-center rounded-full bg-blue-700 hover:bg-blue-600 transition duration-300">
                                        <i class="fa-brands fa-twitter"></i>
                                    </a>
                                    <a href="#"
                                        class="w-10 h-10 flex items-center justify-center rounded-full bg-blue-700 hover:bg-blue-600 transition duration-300">
                                        <i class="fa-brands fa-linkedin-in"></i>
                                    </a>
                                    <a href="#"
                                        class="w-10 h-10 flex items-center justify-center rounded-full bg-blue-700 hover:bg-blue-600 transition duration-300">
                                        <i class="fa-brands fa-instagram"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </body>