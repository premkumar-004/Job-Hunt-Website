<% layout("/layouts/boilerplate.ejs") %>

    <div class="min-h-screen bg-gradient-to-br from-gray-900 to-gray-800 flex items-center justify-center p-6">
        <div class="w-full max-w-4xl">
            <form action="/users/profile/<%=currUser._id%>?_method=PUT" method="POST"
                class="bg-gray-800 rounded-3xl shadow-2xl overflow-hidden border border-gray-700"
                enctype="multipart/form-data">
                <!-- Elegant Header -->
                <div class="relative h-{150px} bg-gradient-to-r from-blue-900 to-purple-900">
                    <div class="absolute inset-0 opacity-30 bg-pattern"></div>
                    <div class="relative z-10 flex items-center justify-center h-full">
                        <div class="text-center">
                            <div class="relative inline-block mt-6">
                                <label for="profileImage" class="cursor-pointer group">
                                    <img src="<%= currUser.profileImage || 'https://t4.ftcdn.net/jpg/06/48/39/19/360_F_648391979_uMz6EwAlKNIJnK9r46UpTiM17nT8GuLl.jpg' %>"
                                        alt="Profile"
                                        class="w-48 h-48 rounded-full border-6 border-gray-700 object-cover shadow-xl transform transition duration-500 group-hover:scale-110 group-hover:rotate-6">
                                    <div
                                        class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
                                        <span class="bg-black bg-opacity-50 text-white px-4 py-2 rounded-full">
                                            Change Photo
                                        </span>
                                    </div>
                                </label>
                                <input type="file" id="profileImage" name="user[profileImage]" class="hidden"
                                    accept="image/*">
                            </div>
                            <input type="text" name="user[name]" value="<%= currUser.name %>"
                                class="mt-2 text-4xl font-bold text-gray-100 tracking-wide bg-transparent border-b-2 border-gray-700 focus:border-blue-500 text-center">
                            <p class="text-xl mb-4 text-gray-300">@<%= currUser.username %>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Profile Content -->
                <div class="p-10 space-y-10">
                    <!-- Personal Information -->
                    <div>
                        <h2
                            class="text-2xl font-semibold text-gray-100 border-b-2 border-gray-700 pb-4 mb-6 flex items-center">
                            <i class="fas fa-user-circle text-blue-400 mr-3"></i>
                            Personal Details
                        </h2>
                        <div class="grid md:grid-cols-3 gap-6">
                            <div class="bg-gray-700/50 p-6 rounded-xl shadow-md border border-gray-600">
                                <div class="space-y-2">
                                    <label class="text-sm text-gray-400">Full Name</label>
                                    <input type="text" name="user[name]" value="<%= currUser.name %>"
                                        class="w-full bg-gray-800 text-gray-100 rounded-lg p-3 border border-gray-600 focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
                                </div>
                            </div>
                            <div class="bg-gray-700/50 p-6 rounded-xl shadow-md border border-gray-600">
                                <div class="space-y-2">
                                    <label class="text-sm text-gray-400">Email Address</label>
                                    <input type="email" name="user[email]" value="<%= currUser.email %>"
                                        class="w-full bg-gray-800 text-gray-100 rounded-lg p-3 border border-gray-600 focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
                                </div>
                            </div>
                            <div class="bg-gray-700/50 p-6 rounded-xl shadow-md border border-gray-600">
                                <div class="space-y-2">
                                    <label class="text-sm text-gray-400">Contact Number</label>
                                    <input type="tel" name="user[phone]" value="<%= currUser.phone %>"
                                        class="w-full bg-gray-800 text-gray-100 rounded-lg p-3 border border-gray-600 focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Location Information -->
                    <div>
                        <h2
                            class="text-2xl font-semibold text-gray-100 border-b-2 border-gray-700 pb-4 mb-6 flex items-center">
                            <i class="fas fa-map-marked-alt text-blue-400 mr-3"></i>
                            Location Information
                        </h2>
                        <div class="grid md:grid-cols-2 gap-6">
                            <div class="bg-gray-700/50 p-6 rounded-xl shadow-md border border-gray-600">
                                <div class="space-y-2">
                                    <label class="text-sm text-gray-400">Country</label>
                                    <input type="text" name="user[country]" value="<%= currUser.country %>"
                                        class="w-full bg-gray-800 text-gray-100 rounded-lg p-3 border border-gray-600 focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
                                </div>
                            </div>
                            <div class="bg-gray-700/50 p-6 rounded-xl shadow-md border border-gray-600">
                                <div class="space-y-2">
                                    <label class="text-sm text-gray-400">State</label>
                                    <input type="text" name="user[state]" value="<%= currUser.state %>"
                                        class="w-full bg-gray-800 text-gray-100 rounded-lg p-3 border border-gray-600 focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
                                </div>
                            </div>
                            <div class="bg-gray-700/50 p-6 rounded-xl shadow-md border border-gray-600">
                                <div class="space-y-2">
                                    <label class="text-sm text-gray-400">City</label>
                                    <input type="text" name="user[city]" value="<%= currUser.city %>"
                                        class="w-full bg-gray-800 text-gray-100 rounded-lg p-3 border border-gray-600 focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
                                </div>
                            </div>
                            <div class="bg-gray-700/50 p-6 rounded-xl shadow-md border border-gray-600">
                                <div class="space-y-2">
                                    <label class="text-sm text-gray-400">Pincode</label>
                                    <input type="text" name="user[pincode]" value="<%= currUser.pincode %>"
                                        class="w-full bg-gray-800 text-gray-100 rounded-lg p-3 border border-gray-600 focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="grid md:grid-cols-2 gap-6">
                        <button type="submit"
                            class="bg-gradient-to-r from-blue-600 to-blue-800 text-gray-100 py-4 rounded-xl text-center font-semibold shadow-lg hover:from-blue-700 hover:to-blue-900 transition duration-300 transform hover:-translate-y-1 flex items-center justify-center space-x-3">
                            <i class="fas fa-save"></i>
                            <span>Save Changes</span>
                        </button>
                        <a href="/users/profile"
                            class="bg-gradient-to-r from-gray-600 to-gray-800 text-gray-100 py-4 rounded-xl text-center font-semibold shadow-lg hover:from-gray-700 hover:to-gray-900 transition duration-300 transform hover:-translate-y-1 flex items-center justify-center space-x-3">
                            <i class="fas fa-times"></i>
                            <span>Cancel</span>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <style>
        .bg-pattern {
            background-image:
                linear-gradient(rgba(255, 255, 255, 0.05) 2px, transparent 2px),
                linear-gradient(90deg, rgba(255, 255, 255, 0.05) 2px, transparent 2px);
            background-size: 20px 20px;
        }
    </style>