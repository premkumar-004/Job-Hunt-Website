<% layout("/layouts/boilerplate.ejs") %>

    <body class="bg-gray-900">
        <% if (!listing.applicants.length) { %>
            <div class="container mx-auto px-6 py-16 text-center">
                <h1 class="text-3xl font-bold text-gray-100">No Applicants Yet</h1>
            </div>
            <% } else { %>
                <div class="container mx-auto px-6 py-12">
                    <h1 class="text-4xl font-extrabold text-gray-100 mb-10 text-center">Applicants for your Listing</h1>
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                        <% for (let applicant of listing.applicants) { %>
                            <div
                                class="bg-gray-800 rounded-lg shadow-lg p-6 hover:shadow-2xl transition-shadow flex flex-col border border-gray-700">
                                <!-- Applicant Image -->
                                <div class="flex justify-center mb-4">
                                    <img src="<%= applicant.profileImage || 'https://t4.ftcdn.net/jpg/06/48/39/19/360_F_648391979_uMz6EwAlKNIJnK9r46UpTiM17nT8GuLl.jpg' %>"
                                        alt="<%= applicant.name %>"
                                        class="w-24 h-24 rounded-full object-cover border-4 border-gray-600">
                                </div>

                                <!-- Applicant Details -->
                                <h2 class="text-2xl font-bold text-gray-100 mb-4 text-center">
                                    <%= applicant.name %>
                                </h2>

                                <div class="space-y-3 mb-4">
                                    <div class="flex items-center text-gray-300">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-400"
                                            fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                        </svg>
                                        <%= applicant.email %>
                                    </div>

                                    <div class="flex items-center text-gray-300">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-green-400"
                                            fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                        </svg>
                                        <%= applicant.phone %>
                                    </div>
                                </div>

                                <!-- View Profile Link -->
                                <div class="mt-auto text-center">
                                    <a href="/users/<%= applicant._id %>"
                                        class="inline-flex items-center justify-center w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none"
                                            viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                        </svg>
                                        View Profile
                                    </a>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </div>
                <% } %>
    </body>