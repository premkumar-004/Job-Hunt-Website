<% layout("/layouts/boilerplate.ejs") %>

    <div class="min-h-screen bg-gradient-to-br from-gray-900 to-gray-800 flex items-center justify-center p-6">
        <div class="w-full max-w-4xl">
            <div class="bg-gray-800 rounded-3xl shadow-2xl overflow-hidden border border-gray-700">
                <!-- Elegant Header -->
                <div class="relative h-{150px} bg-gradient-to-r from-blue-900 to-purple-900">
                    <div class="absolute inset-0 opacity-30 bg-pattern"></div>
                    <div class="relative z-10 flex items-center justify-center h-full">
                        <div class="text-center">
                            <div class="relative inline-block mt-6">
                                <img src="<%= user.profileImage || 'https://t4.ftcdn.net/jpg/06/48/39/19/360_F_648391979_uMz6EwAlKNIJnK9r46UpTiM17nT8GuLl.jpg' %>"
                                    alt="Profile"
                                    class="w-48 h-48 rounded-full border-6 border-gray-700 object-cover shadow-xl transform transition duration-500 hover:scale-110 hover:rotate-6">
                                <div
                                    class="absolute bottom-4 right-4 bg-emerald-500 w-12 h-12 rounded-full flex items-center justify-center text-gray-900 shadow-lg border-4 border-gray-700">
                                    <i class="fas fa-check text-xl"></i>
                                </div>
                            </div>
                            <h1 class="mt-2 text-4xl font-bold text-gray-100 tracking-wide">
                                <%= user.name %>
                            </h1>
                            <p class="text-xl mb-4 text-gray-300">@<%= user.username %>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Profile Content -->
                <div class="p-10 space-y-10">
                    <!-- Personal Information -->
                    <div>
                        <h2
                            class="text-2xl font-semibold text-gray-100 border-b-2 border-gray-700 pb-4 mb-6 flex items-center">
                            <i class="fas fa-user-circle text-blue-400 mr-3"></i>
                            Personal Details
                        </h2>
                        <div class="grid md:grid-cols-3 gap-6">
                            <div
                                class="bg-gray-700/50 p-6 rounded-xl shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-600">
                                <div class="flex items-center space-x-4">
                                    <i class="fas fa-id-badge text-blue-400 text-3xl"></i>
                                    <div>
                                        <p class="text-sm text-gray-400">Full Name</p>
                                        <p class="font-bold text-gray-100 text-lg">
                                            <%= user.name %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div
                                class="bg-gray-700/50 p-6 rounded-xl shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-600">
                                <div class="flex items-center space-x-4">
                                    <i class="fas fa-envelope-open text-emerald-400 text-3xl"></i>
                                    <div class="overflow-hidden min-w-0 relative">
                                        <p class="text-sm text-gray-400">Email Address</p>
                                        <p id="emailDisplay"
                                            class="font-bold text-gray-100 text-lg truncate cursor-pointer hover:text-blue-400"
                                            onclick="toggleFullEmail(this)">
                                            <%= user.email %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div
                                class="bg-gray-700/50 p-6 rounded-xl shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-600">
                                <div class="flex items-center space-x-4">
                                    <i class="fas fa-phone-alt text-purple-400 text-3xl"></i>
                                    <div>
                                        <p class="text-sm text-gray-400">Contact Number</p>
                                        <p class="font-bold text-gray-100 text-lg">
                                            <%= user.phone %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Location Information -->
                    <div>
                        <h2
                            class="text-2xl font-semibold text-gray-100 border-b-2 border-gray-700 pb-4 mb-6 flex items-center">
                            <i class="fas fa-map-marked-alt text-blue-400 mr-3"></i>
                            Location Information
                        </h2>
                        <div class="grid md:grid-cols-2 gap-6">
                            <div
                                class="bg-gray-700/50 p-6 rounded-xl shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-600">
                                <div class="flex items-center space-x-4">
                                    <i class="fas fa-globe text-indigo-400 text-3xl"></i>
                                    <div>
                                        <p class="text-sm text-gray-400">Country</p>
                                        <p class="font-bold text-gray-100 text-lg">
                                            <%= user.country %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div
                                class="bg-gray-700/50 p-6 rounded-xl shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-600">
                                <div class="flex items-center space-x-4">
                                    <i class="fas fa-map text-pink-400 text-3xl"></i>
                                    <div>
                                        <p class="text-sm text-gray-400">State</p>
                                        <p class="font-bold text-gray-100 text-lg">
                                            <%= user.state %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div
                                class="bg-gray-700/50 p-6 rounded-xl shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-600">
                                <div class="flex items-center space-x-4">
                                    <i class="fas fa-city text-orange-400 text-3xl"></i>
                                    <div>
                                        <p class="text-sm text-gray-400">City</p>
                                        <p class="font-bold text-gray-100 text-lg">
                                            <%= user.city %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div
                                class="bg-gray-700/50 p-6 rounded-xl shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-600">
                                <div class="flex items-center space-x-4">
                                    <i class="fas fa-map-pin text-teal-400 text-3xl"></i>
                                    <div>
                                        <p class="text-sm text-gray-400">Pincode</p>
                                        <p class="font-bold text-gray-100 text-lg">
                                            <%= user.pincode %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex justify-center space-x-4">
                        <button id="acceptBtn"
                            class="px-6 py-3 bg-emerald-600 text-white rounded-lg font-semibold hover:bg-emerald-700 transition-colors duration-300 flex items-center">
                            <i class="fas fa-check mr-2"></i>
                            <span id="acceptText">Accept</span>
                        </button>
                        <button id="rejectBtn"
                            class="px-6 py-3 bg-red-600 text-white rounded-lg font-semibold hover:bg-red-700 transition-colors duration-300 flex items-center">
                            <i class="fas fa-times mr-2"></i>
                            <span id="rejectText">Reject</span>
                        </button>
                        <button id="chatNowBtn"
                            class="px-6 py-3 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 transition-colors duration-300 flex items-center">
                            <i class="fas fa-comments mr-2"></i>
                            <span id="chatBtnText">Chat Now</span>
                            <div id="loadingSpinner" class="hidden ml-2">
                                <svg class="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg"
                                    fill="none" viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor"
                                        stroke-width="4"></circle>
                                    <path class="opacity-75" fill="currentColor"
                                        d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z">
                                    </path>
                                </svg>
                            </div>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .bg-pattern {
            background-image:
                linear-gradient(rgba(255, 255, 255, 0.05) 2px, transparent 2px),
                linear-gradient(90deg, rgba(255, 255, 255, 0.05) 2px, transparent 2px);
            background-size: 20px 20px;
        }
    </style>

    <script>
        // Reset chat button state when page loads/reloads
        window.addEventListener('pageshow', function (event) {
            // The persisted property returns true if the page was restored from the bfcache
            // This ensures the button resets even when using back/forward navigation
            const button = document.getElementById('chatNowBtn');
            const spinner = document.getElementById('loadingSpinner');
            const textSpan = document.getElementById('chatBtnText');

            // Reset button to initial state
            button.disabled = false;
            spinner.classList.add('hidden');
            textSpan.textContent = 'Chat Now';
            button.classList.remove('bg-blue-700');
        });

        function toggleFullEmail(element) {
            const fullEmail = '<%= user.email %>';
            if (element.classList.contains('truncate')) {
                element.classList.remove('truncate');
                element.style.whiteSpace = 'normal';
                element.style.overflowWrap = 'break-word';
            } else {
                element.classList.add('truncate');
                element.style.whiteSpace = 'nowrap';
                element.style.overflowWrap = 'normal';
            }
        }

        document.getElementById('acceptBtn').addEventListener('click', function () {
            this.innerHTML = '<i class="fas fa-check mr-2"></i><span>Accepted</span>';
            this.classList.add('bg-gray-600');
            this.disabled = true;
            document.getElementById('rejectBtn').disabled = true;
        });

        document.getElementById('rejectBtn').addEventListener('click', function () {
            this.innerHTML = '<i class="fas fa-times mr-2"></i><span>Rejected</span>';
            this.classList.add('bg-gray-600');
            this.disabled = true;
            document.getElementById('acceptBtn').disabled = true;
        });

        // Chat button functionality
        document.getElementById('chatNowBtn').addEventListener('click', function () {
            const button = this;
            const spinner = document.getElementById('loadingSpinner');
            const textSpan = document.getElementById('chatBtnText');

            // Disable button and show loading state
            button.disabled = true;
            spinner.classList.remove('hidden');
            textSpan.textContent = 'Opening Chat';
            button.classList.add('bg-blue-700');

            // Store the loading state in sessionStorage
            sessionStorage.setItem('chatButtonLoading', 'true');

            // Simulate loading delay then redirect
            setTimeout(() => {
                window.location.href = '/users/chat';
            }, 1500); // 1.5 second delay before redirect
        });

        // Check and clear any stored loading state
        if (sessionStorage.getItem('chatButtonLoading')) {
            sessionStorage.removeItem('chatButtonLoading');
        }
    </script>